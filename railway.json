{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "watchPatterns": [
            "crownmania_backend/**"
        ]
    },
    "deploy": {
        "startCommand": "cd crownmania_backend && npm install && node src/server.js",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}