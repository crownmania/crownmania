# ==============================================
# CROWNMANIA BACKEND ENVIRONMENT VARIABLES
# ==============================================
# IMPORTANT: Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ==============================================

# ==============================================
# FIREBASE ADMIN SDK CONFIGURATION
# ==============================================
# Get these from Firebase Console > Project Settings > Service Accounts
# Download the JSON file and extract values, OR use serviceAccountKey.json file
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project-id.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# ==============================================
# STRIPE PAYMENT CONFIGURATION
# ==============================================
# Get from Stripe Dashboard > Developers > API Keys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
FRONTEND_URL=http://localhost:5173
PORT=5001
NODE_ENV=development

# ==============================================
# REDIS CONFIGURATION (Optional - for rate limiting)
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
# Get from SendGrid > Settings > API Keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxx

# ==============================================
# WEB3 CONFIGURATION
# ==============================================
# Get from Web3Auth Dashboard
VITE_WEB3AUTH_CLIENT_ID=your-web3auth-client-id
VITE_WEB3_RPC_TARGET=https://mainnet.infura.io/v3/your-infura-key

# ==============================================
# MORALIS CONFIGURATION
# ==============================================
# Get from Moralis Admin Panel
MORALIS_API_KEY=your-moralis-api-key

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_VERIFIED_MULTIPLIER=5