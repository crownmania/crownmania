# CrownMania Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env files with real secrets!

# ============================================
# FRONTEND (Vercel) - VITE_ prefix required
# ============================================

# API
VITE_API_URL=https://api.crownmania.com

# Firebase
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=

# Web3Auth
VITE_WEB3AUTH_CLIENT_ID=
VITE_WEB3_RPC_TARGET=https://rpc.ankr.com/eth
VITE_WEB3_CHAIN_ID=0x89
VITE_WEB3AUTH_NETWORK=sapphire_devnet

# Stripe
VITE_STRIPE_PUBLISHABLE_KEY=

# Optional
VITE_MORALIS_API_KEY=
VITE_SENDGRID_API_KEY=

# ============================================
# BACKEND (Railway) - Standard process.env
# ============================================

# Core
NODE_ENV=production
PORT=5001
FRONTEND_URL=https://crownmania.com

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Firebase
FIREBASE_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json

# Thirdweb / NFT
THIRDWEB_NFT_CONTRACT=
THIRDWEB_SECRET_KEY=
THIRDWEB_ENGINE_ACCESS_TOKEN=
NFT_OWNER_WALLET=
NFT_CONTRACT_ADDRESS=
MINTING_WALLET_PRIVATE_KEY=
CHAIN_ID=137
WEB3_RPC_URL=https://polygon-rpc.com

# Moralis
MORALIS_API_KEY=

# Redis (optional - for rate limiting)
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379

# SendGrid
SENDGRID_API_KEY=
ADMIN_NOTIFICATION_EMAIL=admin@crownmania.com

# Security
RECAPTCHA_SECRET_KEY=
SITE_PASSWORD=
SERIAL_HASH_SALT=
CONTENT_ACCESS_SECRET=

# Logging
LOG_LEVEL=info

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ShipStation (optional)
SHIPSTATION_API_KEY=
SHIPSTATION_API_SECRET=
